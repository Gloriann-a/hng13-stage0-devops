# HNG Stage 2 - Blue/Green Deployment Configuration
# Copy this file to .env and update with your values

# Docker images for Blue and Green environments
BLUE_IMAGE=node:18-alpine
GREEN_IMAGE=node:18-alpine

# Which pool should be active (blue or green)
ACTIVE_POOL=blue

# Release identifiers for each environment
RELEASE_ID_BLUE=blue-release-1.0.0
RELEASE_ID_GREEN=green-release-1.0.0

# Application port (optional)
PORT=3000